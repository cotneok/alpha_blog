<div class="d-flex">
  <div class="p-2 bd-highlight flex-grow-1">
    <% flash.each do |name, msg| %>
     <div class='alert alert-<%="#{name}" %>'>
       <a href="#" class="close" daa-dismiss="alert">&#215;</a>
       <%= content_tag :div, msg, :id => "flash_#{name}" if msg.is_a?(String) %>
     </div>
    <% end %>
  </div>
</div>
